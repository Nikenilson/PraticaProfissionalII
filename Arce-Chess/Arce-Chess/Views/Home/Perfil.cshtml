
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/CSS/perfil.css">
<div class="fundo"></div>

<div class="data">
    <div class="nameImg">
        <div class="imageUser" style=""></div>

    </div>
    <div class="name"><h1>@ViewBag.Usuario.Nome</h1></div>
    <div class="information">
        <span>E-mail:  @ViewBag.Usuario.Email</span><br>
        <span>Amigos: @ViewBag.Usuario.NDeAmigos</span><br>
        <span>Partidas: @ViewBag.Usuario.Partidas</span><br>
        <span>Vitórias: @ViewBag.Usuario.Vitorias</span>
    </div>

    <a class="friends" id="friends" onclick="amigos()"><i class="fas fa-user-friends"></i> <br>Enviar Pedido de Amizade</a> <br><br>
</div>

<div class="topo" onclick="topo()"><i class="fas fa-arrow-circle-up"></i></div>


<script>
    function amigos() {
        if (document.getElementById('friends').innerHTML == `<i class="fas fa-user-friends"></i>`) {
            $(".friends").toggleClass("ef");
            document.getElementById('friends').innerHTML = `<i class="fas fa-user-friends"></i> <br>Enviar Pedido de Amizade`;
        }
        else {
            $(".friends").toggleClass("ef");
            document.getElementById('friends').innerHTML = `<i class="fas fa-user-friends"></i>`;
        }




    }
</script>



